{
  "name": "@zeit/cosmosdb-server-mock",
  "version": "0.0.5",
  "description": "A mock CosmosDB server",
  "license": "UNLICENSED",
  "main": "lib/index.js",
  "files": [
    "bin",
    "cert.pem",
    "key.pem",
    "lib"
  ],
  "bin": {
    "cosmosdb-server": "bin/cosmosdb-server.js"
  },
  "scripts": {
    "build": "flow-remove-types src/ -d lib/",
    "format": "prettier --ignore-path .gitignore --write '{bin,src,test}/**/*.js'",
    "format-staged": "git diff --cached --diff-filter=d --name-only '*.js' | xargs prettier --list-different",
    "lint": "eslint --ignore-path .gitignore .",
    "lint-staged": "git diff --cached --diff-filter=d --name-only '*.js' | xargs eslint",
    "prepublish": "yarn build",
    "test": "best -I test/index.js -r flow-remove-types/register",
    "test-sdk": "yarn build && ./test/sdk.sh"
  },
  "dependencies": {
    "@zeit/cosmos-utils": "1.2.4",
    "@zeit/cosmosdb-query": "0.0.5",
    "path-to-regexp": "2.4.0",
    "raw-body": "2.3.3",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@azure/cosmos": "2.0.0-4",
    "@zeit/best": "0.4.3",
    "@zeit/git-hooks": "0.1.4",
    "babel-eslint": "9.0.0",
    "eslint": "5.5.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "3.0.1",
    "eslint-plugin-flowtype": "2.50.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-react": "7.11.1",
    "flow-bin": "0.80.0",
    "flow-remove-types": "1.2.3",
    "prettier": "1.14.2"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:flowtype/recommended",
      "prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "plugins": [
      "flowtype"
    ],
    "rules": {
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_etag",
            "_rid",
            "_self",
            "_ts"
          ]
        }
      ]
    }
  },
  "git": {
    "pre-commit": [
      "flow",
      "lint-staged",
      "format-staged"
    ]
  }
}

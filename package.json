{
  "name": "@zeit/cosmosdb-server-mock",
  "version": "0.1.2",
  "description": "A mock CosmosDB server",
  "license": "UNLICENSED",
  "main": "lib/index.js",
  "files": [
    "cert.pem",
    "key.pem",
    "lib"
  ],
  "bin": {
    "cosmosdb-server": "lib/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --ignore-path .gitignore --write '{src,test}/**/*.ts'",
    "format-staged": "git diff --cached --diff-filter=d --name-only '*.ts' | xargs prettier --list-different",
    "lint": "eslint --ignore-path .gitignore '{src,test}/**/*.ts'",
    "lint-staged": "git diff --cached --diff-filter=d --name-only '*.ts' | xargs eslint",
    "prepublish": "yarn build",
    "test": "yarn test-base && yarn test-sdk",
    "test-base": "best -I test/index.ts -r ts-node/register",
    "test-sdk": "./test/sdk.sh"
  },
  "dependencies": {
    "@zeit/cosmosdb-query": "0.2.0",
    "path-to-regexp": "3.0.0",
    "raw-body": "2.4.1",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@azure/cosmos": "2.1.7",
    "@babel/core": "7.4.5",
    "@types/node": "12.0.10",
    "@types/uuid": "3.4.4",
    "@typescript-eslint/eslint-plugin": "1.11.0",
    "@typescript-eslint/parser": "1.11.0",
    "@zeit/best": "0.5.3",
    "@zeit/git-hooks": "0.1.4",
    "eslint": "6.0.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-import": "2.18.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "7.14.2",
    "prettier": "1.18.2",
    "ts-node": "8.3.0",
    "typescript": "3.5.2"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_etag",
            "_rid",
            "_self",
            "_ts"
          ]
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".ts"]
        }
      }
    }
  },
  "git": {
    "pre-commit": [
      "lint-staged",
      "format-staged"
    ]
  }
}
